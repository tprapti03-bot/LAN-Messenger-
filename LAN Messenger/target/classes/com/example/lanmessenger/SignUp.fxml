<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #0f0b24;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lanmessenger.controller.SignUpPage">

    <children>
        <TextField fx:id="username" layoutX="195.0" layoutY="113.0" prefHeight="35.0" prefWidth="305.0" promptText="Username" style="-fx-background-color: white;">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
        </TextField>
        <AmbientLight color="CHARTREUSE" layoutX="296.0" layoutY="220.0" lightOn="true" />
        <ParallelCamera layoutX="295.0" layoutY="243.0" />
        <PerspectiveCamera layoutX="349.0" layoutY="230.0" />
        <PointLight color="CHARTREUSE" layoutX="372.0" layoutY="250.0" lightOn="true" />
        <PasswordField fx:id="password" layoutX="196.0" layoutY="171.0" prefHeight="35.0" prefWidth="305.0" promptText="Password" style="-fx-background-color: white;">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
        </PasswordField>
        <Button alignment="CENTER" defaultButton="true" layoutX="306.0" layoutY="297.0" mnemonicParsing="false" onAction="#switchToChatScene" prefHeight="27.0" prefWidth="82.0" style="-fx-background-color: #3771b3;" text="Sign Up" textAlignment="JUSTIFY" textFill="WHITE">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Button>
        <PasswordField fx:id="confirmpassword" layoutX="197.0" layoutY="225.0" prefHeight="35.0" prefWidth="305.0" promptText="Confirm Password" style="-fx-background-color: white;">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
        </PasswordField>
        <Hyperlink layoutX="219.0" layoutY="390.0" onAction="#switchToLoginFromSignUp" prefHeight="28.0" prefWidth="261.0" text="Already have an account? Log In" textFill="#5fa0cc">
            <font>
                <Font name="Arial" size="17.0" />
            </font>
        </Hyperlink>
      <Label fx:id="lblmsg" layoutX="197.0" layoutY="268.0" textFill="RED">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
